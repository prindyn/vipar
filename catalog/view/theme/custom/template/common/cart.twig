<div id="cart" class="cart toggle-wrap">
	<button type="button" data-loading-text="{{ text_loading }}" class="toggle">
		<strong>
			{{ text_shopping_cart }}
		</strong>
		<i class="fl-puppets-market1"></i>
		<span id="cart-total" class="cart-total">
			{{ text_items }}
		</span>
	</button>
	<ul class="pull-right toggle_cont">
		{% if products or vouchers %}
			<li>
				<table class="table">
					{% for product in products %}
						<tr>
							<td class="text-center td-img">
								{% if product.thumb %}
									<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail"/></a>
								{% endif %}
							</td>
							<td class="text-left">
								<div class="name">
									<a href="{{ product.href }}">{{ product.name }}</a>
								</div>
								<div>
									<span class="price-cart">
										<i>x
											{{ product.quantity }}</i>
										<b>{{ product.total }}</b>
									</span>
								</div>
							</td>
							<td class="text-center">
								<button type="button" onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" class="btn-danger btn-xs">
									<i class="fa fa-times"></i>
								</button>
							</td>
						</tr>
					{% endfor %}
					{% for voucher in vouchers %}
						<tr>
							<td class="text-center"></td>
							<td class="text-left">
								{{ voucher.description }}
								<div>
									<span class="price-cart">
										<i>x
											{{ voucher.amount }}</i>
										<b>{{ product.total }}</b>
									</span>
								</div>
							</td>
							<td class="text-center text-danger">
								<button type="button" onclick="voucher.remove('{{ voucher.key }}');" title="{{ button_remove }}" class="btn-danger btn-xs">
									<i class="fa fa-times"></i>
								</button>
							</td>
						</tr>
					{% endfor %}
				</table>
			</li>
			<li>
				<table class="table total">
					<tbody>
						{% for total in totals %}
							<tr>
								<td class="text-left">
									{{ total.title }}:
									<strong>{{ total.text }}</strong>
								</td>
								<td class="text-right"></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="text-right">
					<a href="{{ cart }}" class="btn">{{ text_cart }}</a>
					<a href="{{ checkout }}" class="btn-primary">{{ text_checkout }}</a>
				</div>
			</li>
		{% else %}
			<li>
				<div class="text-center">{{ text_empty }}</div>
			</li>
		{% endif %}
	</ul>
</div>
